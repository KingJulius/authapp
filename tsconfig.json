{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/utils/*": ["utils/"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "utils/validate.ts", "pages/__tests__/login.test.tsx", "pages/__tests__/register.test.tsx", "components/__tests__/Wrapper.test.js"],
  "exclude": ["node_modules"]
}
